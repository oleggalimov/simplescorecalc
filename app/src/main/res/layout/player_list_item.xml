<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:gravity="start">
    <ImageView
            android:layout_width="8dp"
            android:layout_height="32dp"
            app:srcCompat="@mipmap/ic_player"
            android:id="@+id/playerAvatarInGame"
            android:layout_weight="1"
            android:contentDescription="@string/hint_playerName"

    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/onGamePlayerName"
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:textSize="24sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/onGamePlayerScore"
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textSize="24sp" />

</LinearLayout>